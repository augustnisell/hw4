<h1><%= @place["name"] %></h1>

<% if @current_user %>
  <h2>My Posts</h2>
  <div class="row">
    <% for post in @posts %>
      <% if post["place_id"] == @place["id"] && post["user_id"] == @current_user["id"] %>
        <div class="col-lg-4">
          <h3><%= post["title"] %></h3>
          <h4><%= post["posted_on"] %></h4>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% end %>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    <% end %>
  </div>

  <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>
<% else %>
  <h2>You must be logged in to see posts</h2>
<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>